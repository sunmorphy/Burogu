<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Burogu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryDark</item>
        <item name="colorSecondaryVariant">@color/primaryLight</item>
        <item name="colorOnSecondary">@color/primaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:textColorPrimary">@color/primaryDark</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
    </style>

    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryRed</item>
    </style>

    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primaryDark</item>
    </style>
</resources>